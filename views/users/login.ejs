<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1
    class="col-xl-4 offset-xl-5 col-lg-4 offset-lg-5 col-4 offset-4 col-md-4 offset-md-5 col-sm-4 offset-sm-4"
  >
    Login
  </h1>
  <div class="col-8 offset-2">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <br />
        <button class="btn btn-success">Login</button>
      </div>
    </form>
  </div>
</div>
